  }
}

// Function to update orders table
function updateOrdersTable(data) {
  const tableBody = document.querySelector('.orders-table tbody');
  
  if (!tableBody) return;
  
  if (data.orders && data.orders.length > 0) {
    let tableHTML = '';
    data.orders.forEach((order) => {
      tableHTML += generateOrderRowHTML(order);
    });
    tableBody.innerHTML = tableHTML;

    // ‚úÖ Calculate continuous row numbers based on current page
    const rows = tableBody.querySelectorAll('tr.order-row');
    const itemsPerPage = data.itemsPerPage || 10; // Default to 10 if not provided
    const currentPage = data.currentPage || 1;
    const startNumber = (currentPage - 1) * itemsPerPage + 1;

    rows.forEach((row, index) => {
      const rowNumberSpan = row.querySelector('[data-row-number]');
      if (rowNumberSpan) {
        rowNumberSpan.textContent = startNumber + index;
      }
    });
