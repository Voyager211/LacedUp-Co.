<body>

  <!-- Page Transition Overlay -->
  <div id="admin-transition-overlay" class="page-transition-overlay">
    <div class="text-center">
      <div class="transition-spinner"></div>
      <div class="transition-text" id="admin-transition-text">Loading...</div>
    </div>
  </div>

