<script>
// Wait for DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
  let currentPage = <%= currentPage %>;
  
  // ✅ SweetAlert2 Functions
  function showSuccessMessage(title, text) {
    Swal.fire({
      title: title,
      text: text,
      icon: 'success',
      confirmButtonText: 'OK',
      confirmButtonColor: '#000',
      customClass: {
        popup: 'rounded-3'
      }
    });
  }
  
  function showErrorMessage(title, text) {
    Swal.fire({
      title: title,
      text: text,
      icon: 'error',
      confirmButtonText: 'OK',
      confirmButtonColor: '#dc3545'
    });
  }
  
  function showConfirmDialog(title, text, confirmText = 'Yes') {
    return Swal.fire({
      title: title,
      text: text,
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#dc3545',
      cancelButtonColor: '#6c757d',
      confirmButtonText: confirmText,
      cancelButtonText: 'Cancel'
    });
  }
  
  // ✅ Callback functions for the filters bar
  window.updateCouponsTable = function(data) {
    const tbody = document.querySelector('.coupons-table tbody');
    const coupons = data.coupons || [];
    
    if (!coupons || coupons.length === 0) {
      tbody.innerHTML = `
        <tr>
          <td colspan="9" class="text-center py-5">
            <div class="empty-state">
              <i class="bi bi-ticket-perforated display-1 text-muted mb-3"></i>
              <h5 class="text-muted">No coupons found</h5>
              <p class="text-muted mb-0">No coupons match your current filters.</p>
            </div>
          </td>
        </tr>
      `;
      return;
    }
    
    const rowsHtml = coupons.map((coupon, index) => {
      const validFrom = new Date(coupon.validFrom).toLocaleDateString('en-IN');
      const validTo = new Date(coupon.validTo).toLocaleDateString('en-IN');
      const now = new Date();
      const isExpired = new Date(coupon.validTo) < now;
      
      return `
        <tr>
          <td>${(currentPage - 1) * 10 + index + 1}</td>
          <td>
            <span class="fw-bold text-primary">${coupon.code}</span>
          </td>
          <td>
            <div>
              <div class="fw-semibold">${coupon.name}</div>
              ${coupon.description ? `<small class="text-muted">${coupon.description.substring(0, 40)}...</small>` : ''}
            </div>
          </td>
          <td>
            <span class="badge badge-type ${coupon.discountType === 'percentage' ? 'bg-info' : 'bg-warning'}">${coupon.discountType}</span>
          </td>
          <td>
            ${coupon.discountType === 'percentage' ? 
              `<span class="fw-bold">${coupon.discountValue}%</span>
               ${coupon.maximumDiscountAmount ? `<br><small class="text-muted">Max: ₹${coupon.maximumDiscountAmount}</small>` : ''}` :
              `<span class="fw-bold">₹${coupon.discountValue}</span>`
            }
          </td>
          <td>
            <span class="fw-semibold">${coupon.usedCount || 0}</span>
            <span class="text-muted">/ ${coupon.usageLimit || '∞'}</span>
          </td>
          <td>
            <div class="small">
              <div>${validFrom}</div>
              <div class="text-muted">to ${validTo}</div>
            </div>
          </td>
          <td>
            ${coupon.isActive && !isExpired ? 
              '<span class="badge bg-success rounded-pill">Active</span>' : 
              '<span class="badge bg-secondary rounded-pill">Inactive</span>'
            }
          </td>
          <td class="text-center">
            <button class="btn btn-sm btn-action me-1" 
                    onclick="toggleCouponStatus('${coupon._id}', ${!coupon.isActive})"
                    ${isExpired ? 'disabled title="Cannot activate expired coupon"' : ''}>
              <i class="bi bi-${coupon.isActive ? 'pause' : 'play'}-circle"></i>
              ${coupon.isActive ? 'Deactivate' : 'Activate'}
            </button>
            ${(coupon.usedCount === 0) ? `
              <button class="btn btn-sm btn-delete" onclick="deleteCoupon('${coupon._id}')">
                <i class="bi bi-trash"></i> Delete
              </button>
            ` : ''}
          </td>
        </tr>
      `;
    }).join('');
    
    tbody.innerHTML = rowsHtml;
  };

  window.updateStatistics = function(data) {
    const statsElements = document.querySelectorAll('.stats-card .card-body h3');
    
    if (statsElements[0]) statsElements[0].textContent = data.activeCoupons || 0;
    if (statsElements[1]) statsElements[1].textContent = data.totalCoupons || 0;
    if (statsElements[2]) statsElements[2].textContent = data.totalUsage || 0;
    if (statsElements[3]) statsElements[3].textContent = `₹${(data.totalSavings || 0).toLocaleString('en-IN')}`;
  };

  // ✅ Modal and form handling
  const modalElement = document.getElementById('createCouponModal');
  const createCouponForm = document.getElementById('createCouponForm');
  
  if (createCouponForm) {
    createCouponForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const submitBtn = this.querySelector('button[type="submit"]');
      const originalText = submitBtn.innerHTML;
      
      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="bi bi-arrow-clockwise spin me-1"></i>Creating...';
      
      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());
      
      try {
        const response = await fetch('/admin/coupons', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Hide the modal
          const modal = bootstrap.Modal.getInstance(modalElement);
          if (modal) {
            modal.hide();
          }
          
          // Show success message with SweetAlert
          showSuccessMessage('Success!', 'Coupon created successfully!');
          
          // Clear form
          this.reset();
          
          // Refresh the table
          if (typeof applyFilters === 'function') {
            applyFilters(1);
          } else {
            location.reload();
          }
        } else {
          showErrorMessage('Error', result.message || 'Failed to create coupon');
        }
      } catch (error) {
        console.error('Error:', error);
        showErrorMessage('Error', 'Something went wrong. Please try again.');
      } finally {
        // Reset button
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
      }
    });
  }

  // Set default dates when modal is shown
  if (modalElement) {
    modalElement.addEventListener('show.bs.modal', function () {
      const now = new Date();
      const tomorrow = new Date(now.getTime() + 24 * 60 * 60 * 1000);
      const nextWeek = new Date(now.getTime() + 7 * 24 * 60 * 60 * 1000);
      
      document.getElementById('validFrom').value = tomorrow.toISOString().slice(0, 16);
      document.getElementById('validTo').value = nextWeek.toISOString().slice(0, 16);
    });

    modalElement.addEventListener('hidden.bs.modal', function () {
      const form = this.querySelector('#createCouponForm');
      if (form) {
        form.reset();
        const maxDiscountField = document.getElementById('maxDiscountField');
        if (maxDiscountField) {
          maxDiscountField.style.display = 'none';
        }
      }
    });
  }

  // ✅ Global functions for button actions
  window.toggleCouponStatus = async function(couponId, newStatus) {
    const action = newStatus ? 'activate' : 'deactivate';
    const result = await showConfirmDialog(
      'Are you sure?',
      `Do you want to ${action} this coupon?`,
      `Yes, ${action}!`
    );
    
    if (!result.isConfirmed) return;
    
    try {
      const response = await fetch(`/admin/coupons/${couponId}/toggle`, {
        method: 'PATCH'
      });
      
      const data = await response.json();
      
      if (data.success) {
        showSuccessMessage('Updated!', `Coupon has been ${action}d successfully.`);
        if (typeof applyFilters === 'function') {
          applyFilters(currentPage);
        } else {
          location.reload();
        }
      } else {
        showErrorMessage('Error', data.message || `Failed to ${action} coupon`);
      }
    } catch (error) {
      console.error('Error:', error);
      showErrorMessage('Error', 'Something went wrong. Please try again.');
    }
  };

  window.deleteCoupon = async function(couponId) {
    const result = await showConfirmDialog(
      'Delete Coupon',
      'Are you sure you want to delete this coupon? This action cannot be undone.',
      'Yes, delete it!'
    );
    
    if (!result.isConfirmed) return;
    
    try {
      const response = await fetch(`/admin/coupons/${couponId}`, {
        method: 'DELETE'
      });
      
      const data = await response.json();
      
      if (data.success) {
        showSuccessMessage('Deleted!', 'Coupon has been deleted successfully.');
        if (typeof applyFilters === 'function') {
          applyFilters(currentPage);
        } else {
          location.reload();
        }
      } else {
        showErrorMessage('Error', data.message || 'Failed to delete coupon');
      }
    } catch (error) {
      console.error('Error:', error);
      showErrorMessage('Error', 'Something went wrong. Please try again.');
    }
  };

  // ✅ Toggle discount fields based on type
  window.toggleDiscountFields = function() {
    const discountType = document.getElementById('discountType').value;
    const maxDiscountField = document.getElementById('maxDiscountField');
    
    if (discountType === 'percentage') {
      maxDiscountField.style.display = 'block';
    } else {
      maxDiscountField.style.display = 'none';
      document.getElementById('maximumDiscountAmount').value = '';
    }
  };
});
</script>
