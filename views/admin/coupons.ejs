<div class="container-fluid py-4">
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h2 class="fw-bold text-black mb-1">Coupon Management</h2>
          <p class="text-muted mb-0">Create and manage discount coupons</p>
        </div>
        <div class="d-flex gap-2">
          <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createCouponModal">
            <i class="bi bi-plus-circle me-1"></i>Create New Coupon
          </button>
          <button class="btn btn-dark" id="headerRefreshBtn">
            <i class="bi bi-arrow-clockwise me-1"></i>Refresh
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
      <div class="card stats-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-success bg-opacity-10 rounded-3 p-3">
                <i class="bi bi-ticket-perforated text-success fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Active Coupons</h6>
              <h3 class="fw-bold text-dark mb-0"><%= activeCoupons || 0 %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
      <div class="card stats-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-info bg-opacity-10 rounded-3 p-3">
                <i class="bi bi-graph-up text-info fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Total Coupons</h6>
              <h3 class="fw-bold text-dark mb-0"><%= totalCoupons || 0 %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
      <div class="card stats-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                <i class="bi bi-people text-warning fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Total Usage</h6>
              <h3 class="fw-bold text-dark mb-0"><%= totalUsage || 0 %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
      <div class="card stats-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                <i class="bi bi-currency-rupee text-primary fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Total Savings</h6>
              <h3 class="fw-bold text-dark mb-0">₹<%= totalSavings ? totalSavings.toLocaleString('en-IN') : 0 %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters and Search -->
  <%- include('partials/filters-bar', {
    searchPlaceholder: 'Search coupons...',
    searchLabel: 'Search Coupons',
    formId: 'couponFilterForm',
    apiEndpoint: '/admin/coupons/api/filtered',
    tableSelector: '.coupons-table tbody',
    updateTableCallback: 'updateCouponsTable',
    updateStatsCallback: 'updateStatistics',
    filterValues: filters,
    filters: [
      {
        name: 'status',
        label: 'Status',
        type: 'select',
        colSize: 2,
        allOption: 'All Status',
        options: [
          { value: 'active', label: 'Active' },
          { value: 'inactive', label: 'Inactive' }
        ]
      },
      {
        name: 'discountType',
        label: 'Discount Type',
        type: 'select',
        colSize: 2,
        allOption: 'All Types',
        options: [
          { value: 'percentage', label: 'Percentage' },
          { value: 'fixed', label: 'Fixed Amount' }
        ]
      },
      {
        name: 'sortBy',
        label: 'Sort By',
        type: 'select',
        colSize: 2,
        options: [
          { value: 'createdAt', label: 'Created Date' },
          { value: 'validTo', label: 'Expiry Date' },
          { value: 'usedCount', label: 'Usage Count' },
          { value: 'discountValue', label: 'Discount Value' }
        ]
      },
      {
        name: 'sortOrder',
        label: 'Order',
        type: 'select',
        colSize: 2,
        options: [
          { value: 'desc', label: 'Desc' },
          { value: 'asc', label: 'Asc' }
        ]
      }
    ]
  }) %>

  <!-- Coupons Table -->
  <div class="row">
    <div class="col-12">
      <div class="card clean-card">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table coupons-table mb-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Coupon Code</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Value</th>
                  <th>Usage</th>
                  <th>Valid Period</th>
                  <th>Status</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (coupons && coupons.length > 0) { %>
                  <% coupons.forEach((coupon, index) => { %>
                    <tr>
                      <td><%= (currentPage - 1) * 10 + index + 1 %></td>
                      <td>
                        <span class="fw-bold text-primary"><%= coupon.code %></span>
                      </td>
                      <td>
                        <div>
                          <div class="fw-semibold"><%= coupon.name %></div>
                          <% if (coupon.description) { %>
                            <small class="text-muted"><%= coupon.description.substring(0, 40) %>...</small>
                          <% } %>
                        </div>
                      </td>
                      <td>
                        <span class="badge badge-type <%= coupon.discountType === 'percentage' ? 'bg-info' : 'bg-warning' %>">
                          <%= coupon.discountType %>
                        </span>
                      </td>
                      <td>
                        <% if (coupon.discountType === 'percentage') { %>
                          <span class="fw-bold"><%= coupon.discountValue %>%</span>
                          <% if (coupon.maximumDiscountAmount) { %>
                            <br><small class="text-muted">Max: ₹<%= coupon.maximumDiscountAmount %></small>
                          <% } %>
                        <% } else { %>
                          <span class="fw-bold">₹<%= coupon.discountValue %></span>
                        <% } %>
                      </td>
                      <td>
                        <span class="fw-semibold"><%= coupon.usedCount || 0 %></span>
                        <span class="text-muted">/ <%= coupon.usageLimit || '∞' %></span>
                      </td>
                      <td>
                        <div class="small">
                          <div><%= new Date(coupon.validFrom).toLocaleDateString('en-IN') %></div>
                          <div class="text-muted">to <%= new Date(coupon.validTo).toLocaleDateString('en-IN') %></div>
                        </div>
                      </td>
                      <td>
                        <% if (coupon.isActive) { %>
                          <span class="badge bg-success rounded-pill">Active</span>
                        <% } else { %>
                          <span class="badge bg-secondary rounded-pill">Inactive</span>
                        <% } %>
                      </td>
                      <td class="text-center">
                        <button class="btn btn-sm btn-action me-1" 
                                onclick="toggleCouponStatus('<%= coupon._id %>', <%= !coupon.isActive %>)"
                                title="<%= coupon.isActive ? 'Deactivate' : 'Activate' %> coupon">
                          <i class="bi bi-<%= coupon.isActive ? 'pause' : 'play' %>-circle"></i>
                          <%= coupon.isActive ? 'Deactivate' : 'Activate' %>
                        </button>
                        <% if (coupon.usedCount === 0) { %>
                        <button class="btn btn-sm btn-delete" 
                                onclick="deleteCoupon('<%= coupon._id %>')"
                                title="Delete coupon">
                          <i class="bi bi-trash"></i>
                          Delete
                        </button>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="9" class="text-center py-5">
                      <div class="empty-state">
                        <i class="bi bi-ticket-perforated display-1 text-muted mb-3"></i>
                        <h5 class="text-muted">No coupons found</h5>
                        <p class="text-muted mb-0">Create your first coupon to get started.</p>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Pagination -->
  <% if (totalPages >= 1) { %>
    <div class="row mt-4">
      <div class="col-12">
        <%- include('partials/pagination', {
          currentPage: currentPage,
          totalPages: totalPages,
          paginationCallbackName: 'applyFilters'
        }) %>
      </div>
    </div>
  <% } %>
</div>

<!-- Create Coupon Modal -->
<div class="modal fade" id="createCouponModal" tabindex="-1" aria-labelledby="createCouponModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createCouponModalLabel">Create New Coupon</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="createCouponForm">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="code" class="form-label">Coupon Code *</label>
                <input type="text" class="form-control" id="code" name="code" 
                       required maxlength="20" style="text-transform: uppercase;"
                       placeholder="e.g., SAVE20">
                <small class="form-text text-muted">Only uppercase letters and numbers allowed</small>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="name" class="form-label">Coupon Name *</label>
                <input type="text" class="form-control" id="name" name="name" 
                       required maxlength="100" placeholder="e.g., Summer Sale">
              </div>
            </div>
          </div>
          
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" 
                      rows="3" maxlength="500" 
                      placeholder="Brief description of the coupon"></textarea>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="discountType" class="form-label">Discount Type *</label>
                <select class="form-select" id="discountType" name="discountType" 
                        required onchange="toggleDiscountFields()">
                  <option value="">Select discount type</option>
                  <option value="percentage">Percentage</option>
                  <option value="fixed">Fixed Amount</option>
                </select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="discountValue" class="form-label">Discount Value *</label>
                <input type="number" class="form-control" id="discountValue" 
                       name="discountValue" required min="0.01" step="0.01"
                       placeholder="e.g., 10">
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="minimumOrderValue" class="form-label">Minimum Order Value (₹)</label>
                <input type="number" class="form-control" id="minimumOrderValue" 
                       name="minimumOrderValue" min="0" step="0.01" value="0"
                       placeholder="0">
              </div>
            </div>
            <div class="col-md-6" id="maxDiscountField" style="display: none;">
              <div class="mb-3">
                <label for="maximumDiscountAmount" class="form-label">Maximum Discount Amount (₹)</label>
                <input type="number" class="form-control" id="maximumDiscountAmount" 
                       name="maximumDiscountAmount" min="0" step="0.01"
                       placeholder="e.g., 200">
                <small class="form-text text-muted">Only for percentage discounts</small>
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="usageLimit" class="form-label">Total Usage Limit</label>
                <input type="number" class="form-control" id="usageLimit" 
                       name="usageLimit" min="1" placeholder="Leave empty for unlimited">
                <small class="form-text text-muted">Leave empty for unlimited usage</small>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="userLimit" class="form-label">Per User Limit *</label>
                <input type="number" class="form-control" id="userLimit" 
                       name="userLimit" min="1" value="1" required>
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="validFrom" class="form-label">Valid From *</label>
                <input type="datetime-local" class="form-control" id="validFrom" 
                       name="validFrom" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="validTo" class="form-label">Valid To *</label>
                <input type="datetime-local" class="form-control" id="validTo" 
                       name="validTo" required>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-dark">Create Coupon</button>
        </div>
      </form>
    </div>
  </div>
</div>

