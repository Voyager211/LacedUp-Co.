<div class="container-fluid py-4">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-0 fw-bold text-dark">Return Request Details</h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item"><a href="/admin/returns">Returns</a></li>
          <li class="breadcrumb-item active">Return Details</li>
        </ol>
      </nav>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/returns" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Returns
      </a>
    </div>
  </div>

  <div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
      
      <!-- Return Request Overview -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0 fw-semibold">Return Request Information</h5>
          <span class="badge bg-<%= getReturnStatusColor(returnRequest.status) %> fs-6">
            <%= returnRequest.status.charAt(0).toUpperCase() + returnRequest.status.slice(1) %>
          </span>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label text-muted small">Return ID</label>
                <div class="fw-semibold"><%= returnRequest._id %></div>
              </div>
              <div class="mb-3">
                <label class="form-label text-muted small">Original Order ID</label>
                <div class="fw-semibold">
                  <% if (order) { %>
                    <a href="/admin/orders/<%= order.orderId %>" class="text-decoration-none">
                      <%= returnRequest.orderId %>
                      <i class="bi bi-box-arrow-up-right ms-1"></i>
                    </a>
                  <% } else { %>
                    <%= returnRequest.orderId %>
                  <% } %>
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label text-muted small">Request Date</label>
                <div class="fw-semibold">
                  <%= new Date(returnRequest.requestDate).toLocaleDateString('en-GB', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label text-muted small">Return Reason</label>
                <div class="fw-semibold"><%= returnRequest.reason %></div>
              </div>
              <div class="mb-3">
                <label class="form-label text-muted small">Quantity</label>
                <div class="fw-semibold"><%= returnRequest.quantity %></div>
              </div>
              <div class="mb-3">
                <label class="form-label text-muted small">Refund Amount</label>
                <div class="fw-semibold text-success">₹<%= returnRequest.refundAmount.toLocaleString('en-IN') %></div>
              </div>
            </div>
          </div>
          
          <% if (returnRequest.notes) { %>
          <div class="mt-3 pt-3 border-top">
            <label class="form-label text-muted small">Customer Notes</label>
            <div class="p-3 bg-light rounded"><%= returnRequest.notes %></div>
          </div>
          <% } %>

          <% if (returnRequest.adminNotes) { %>
          <div class="mt-3">
            <label class="form-label text-muted small">Admin Notes</label>
            <div class="p-3 bg-light rounded"><%= returnRequest.adminNotes %></div>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Product Information -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="card-title mb-0 fw-semibold">Product Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <% if (returnRequest.productId && returnRequest.productId.mainImage) { %>
                <img src="<%= returnRequest.productId.mainImage %>" 
                     alt="<%= returnRequest.productId.productName %>" 
                     class="img-fluid rounded border">
              <% } else { %>
                <div class="bg-light rounded border d-flex align-items-center justify-content-center" 
                     style="height: 150px;">
                  <i class="bi bi-image text-muted fs-1"></i>
                </div>
              <% } %>
            </div>
            <div class="col-md-9">
              <h6 class="fw-bold mb-3">
                <%= returnRequest.productId ? returnRequest.productId.productName : 'Product Name' %>
              </h6>
              <div class="row">
                <div class="col-sm-6">
                  <div class="mb-2">
                    <span class="text-muted small">SKU:</span>
                    <code class="ms-2"><%= returnRequest.sku %></code>
                  </div>
                  <div class="mb-2">
                    <span class="text-muted small">Size:</span>
                    <span class="badge bg-light text-dark ms-2"><%= returnRequest.size %></span>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="mb-2">
                    <span class="text-muted small">Original Price:</span>
                    <span class="fw-semibold ms-2">₹<%= returnRequest.originalPrice.toLocaleString('en-IN') %></span>
                  </div>
                  <div class="mb-2">
                    <span class="text-muted small">Brand:</span>
                    <span class="ms-2">
                      <%= returnRequest.productId && returnRequest.productId.brand ? returnRequest.productId.brand : 'N/A' %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Processing Information -->
      <% if (returnRequest.processedBy || returnRequest.processedAt) { %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="card-title mb-0 fw-semibold">Processing Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <% if (returnRequest.processedBy) { %>
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label text-muted small">Processed By</label>
                <div class="fw-semibold">
                  <%= returnRequest.processedBy.name %>
                  <small class="text-muted">(<%= returnRequest.processedBy.email %>)</small>
                </div>
              </div>
            </div>
            <% } %>
            <% if (returnRequest.processedAt) { %>
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label text-muted small">Processed Date</label>
                <div class="fw-semibold">
                  <%= new Date(returnRequest.processedAt).toLocaleDateString('en-GB', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>

    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      
      <!-- Customer Information -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="card-title mb-0 fw-semibold">Customer Information</h5>
        </div>
        <div class="card-body">
          <% if (returnRequest.userId) { %>
          <div class="d-flex align-items-center mb-3">
            <% if (returnRequest.userId.profilePhoto) { %>
              <img src="<%= returnRequest.userId.profilePhoto %>" 
                   class="rounded-circle me-3" 
                   style="width: 50px; height: 50px; object-fit: cover;">
            <% } else { %>
              <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" 
                   style="width: 50px; height: 50px;">
                <i class="bi bi-person-fill text-primary"></i>
              </div>
            <% } %>
            <div>
              <div class="fw-semibold"><%= returnRequest.userId.name %></div>
              <small class="text-muted"><%= returnRequest.userId.email %></small>
            </div>
          </div>
          <div class="mb-2">
            <small class="text-muted">Phone:</small>
            <div><%= returnRequest.userId.phone || 'N/A' %></div>
          </div>
          <% } else { %>
          <div class="text-muted">Customer information not available</div>
          <% } %>
        </div>
      </div>

      <!-- Actions -->
      <% if (returnRequest.status === 'pending') { %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="card-title mb-0 fw-semibold">Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <button class="btn btn-success" onclick="processReturn('<%= returnRequest._id %>', 'approved')">
              <i class="bi bi-check-circle me-2"></i>Approve Return
            </button>
            <button class="btn btn-danger" onclick="processReturn('<%= returnRequest._id %>', 'rejected')">
              <i class="bi bi-x-circle me-2"></i>Reject Return
            </button>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Order Information -->
      <% if (order) { %>
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="card-title mb-0 fw-semibold">Original Order</h5>
        </div>
        <div class="card-body">
          <div class="mb-2">
            <small class="text-muted">Order ID:</small>
            <div>
              <a href="/admin/orders/<%= order.orderId %>" class="text-decoration-none">
                <%= order.orderId %>
              </a>
            </div>
          </div>
          <div class="mb-2">
            <small class="text-muted">Order Date:</small>
            <div>
              <%= new Date(order.orderDate).toLocaleDateString('en-GB', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric'
              }) %>
            </div>
          </div>
          <div class="mb-2">
            <small class="text-muted">Order Total:</small>
            <div class="fw-semibold">₹<%= order.totalAmount.toLocaleString('en-IN') %></div>
          </div>
          <div class="mt-3">
            <a href="/admin/orders/<%= order.orderId %>" class="btn btn-outline-primary btn-sm">
              <i class="bi bi-eye me-1"></i>View Order
            </a>
          </div>
        </div>
      </div>
      <% } %>

    </div>
  </div>
</div>

<!-- Action Processing Script -->
<script>
function processReturn(returnId, action) {
  const actionText = action === 'approved' ? 'approve' : 'reject';
  
  if (!confirm(`Are you sure you want to ${actionText} this return request?`)) {
    return;
  }
  
  // Show loading state
  const buttons = document.querySelectorAll('button[onclick*="processReturn"]');
  buttons.forEach(btn => {
    btn.disabled = true;
    btn.innerHTML = btn.innerHTML.replace(/Approve|Reject/, 'Processing...');
  });
  
  fetch(`/admin/returns/${returnId}/process`, {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      action: action,
      adminNotes: '' // You can add a modal for admin notes
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload(); // Refresh to show updated status
    } else {
      alert('Error: ' + data.message);
      // Restore buttons
      buttons.forEach(btn => {
        btn.disabled = false;
        btn.innerHTML = btn.innerHTML.replace('Processing...', action === 'approved' ? 'Approve' : 'Reject');
      });
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('An error occurred while processing the return request');
    // Restore buttons
    buttons.forEach(btn => {
      btn.disabled = false;
      btn.innerHTML = btn.innerHTML.replace('Processing...', action === 'approved' ? 'Approve' : 'Reject');
    });
  });
}
</script>
