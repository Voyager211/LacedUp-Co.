      const method = isCurrentlyInWishlist ? 'DELETE' : 'POST';
      const requestBody = isCurrentlyInWishlist ? {} : { productId };

      fetch(apiUrl, {
        method: method,
        headers: {
          'Content-Type': 'application/json'
        },
        ...(method === 'POST' && { body: JSON.stringify(requestBody) })
      })
