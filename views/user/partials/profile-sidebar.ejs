<!-- Profile Sidebar Navigation -->
<div class="profile-sidebar">
  <!-- Include Profile Card -->
  <%- include('profile-card.ejs', { user: user }) %>
  
  <!-- Navigation Menu -->
  <nav class="profile-nav">
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link <%= active === 'profile' ? 'active' : '' %>" href="/profile">
          <i class="bi bi-person-circle me-2"></i>
          My Profile
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= active === 'addresses' ? 'active' : '' %>" href="/profile/addresses">
          <i class="bi bi-geo-alt me-2"></i>
          Address Book
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= active === 'orders' ? 'active' : '' %>" href="/orders">
          <i class="bi bi-bag-check me-2"></i>
          My Orders
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= active === 'wallet' ? 'active' : '' %>" href="/profile/wallet">
          <i class="bi bi-wallet2 me-2"></i>
          Wallet
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= active === 'coupons' ? 'active' : '' %>" href="/profile/coupons">
          <i class="bi bi-ticket-perforated me-2"></i>
