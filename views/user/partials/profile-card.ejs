<!-- Profile Card Component -->
<div class="profile-card">
  <div class="profile-card-content">
    <!-- Profile Picture -->
    <div class="profile-card-image">
      <% if (user.profilePhoto) { %>
        <img src="/uploads/profiles/<%= user.profilePhoto %>" 
             alt="<%= user.name %>'s Profile" 
             class="profile-card-avatar">
      <% } else { %>
        <div class="profile-card-avatar-placeholder">
          <%= user.name ? user.name.charAt(0).toUpperCase() : 'ðŸ‘¤' %>
        </div>
      <% } %>
    </div>
    
    <!-- User Information -->
    <div class="profile-card-info">
      <h3 class="profile-card-name"><%= user.name || 'User' %></h3>
      <p class="profile-card-email"><%= user.email || 'No email provided' %></p>
    </div>
  </div>
</div>

<style>
/* Profile Card Styles */
.profile-card {
  background: linear-gradient(135deg, #000 0%, #333 100%);
  border-radius: 16px;
  padding: 2rem 1.5rem;
  margin-bottom: 1.5rem;
  text-align: center;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.profile-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, #fff 0%, rgba(255, 255, 255, 0.5) 50%, #fff 100%);
}

.profile-card-content {
  position: relative;
  z-index: 1;
}

.profile-card-image {
  margin-bottom: 1.25rem;
  display: flex;
  justify-content: center;
}

.profile-card-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.profile-card-avatar:hover {
  transform: scale(1.05);
  border-color: rgba(255, 255, 255, 0.4);
}

.profile-card-avatar-placeholder {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  font-weight: 700;
  border: 3px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.profile-card-avatar-placeholder:hover {
  transform: scale(1.05);
  border-color: rgba(255, 255, 255, 0.4);
}

.profile-card-info {
  color: #fff;
}

.profile-card-name {
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0 0 0.5rem 0;
  color: #fff;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  line-height: 1.3;
}

.profile-card-email {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  margin: 0;
  font-weight: 400;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  word-break: break-word;
  line-height: 1.4;
}

/* Responsive Design for Profile Card */
@media (max-width: 768px) {
  .profile-card {
    padding: 1.5rem 1rem;
    margin-bottom: 1rem;
    border-radius: 12px;
  }
  
  .profile-card-avatar,
  .profile-card-avatar-placeholder {
    width: 70px;
    height: 70px;
  }
  
  .profile-card-avatar-placeholder {
    font-size: 1.75rem;
  }
  
  .profile-card-name {
    font-size: 1.1rem;
  }
  
  .profile-card-email {
    font-size: 0.85rem;
  }
  
