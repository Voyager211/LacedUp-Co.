<script>
  // Copy referral code
  function copyCode() {
    const codeInput = document.getElementById('referralCode');
    codeInput.select();
    navigator.clipboard.writeText(codeInput.value);
    showToast('success', 'Referral code copied!');
  }

  // Copy referral link
  function copyLink() {
    const linkInput = document.getElementById('referralLink');
    linkInput.select();
    navigator.clipboard.writeText(linkInput.value);
    showToast('success', 'Referral link copied!');
  }

  // Show share modal
  function showShareModal() {
    const modal = new bootstrap.Modal(document.getElementById('shareModal'));
    modal.show();
  }

  // Copy code from modal
  function copyCodeAndShare() {
    const code = '<%= user.referralCode %>';
    navigator.clipboard.writeText(code);
    showToast('success', 'Referral code copied to clipboard!');
  }

  // Copy link from modal
  function copyLinkAndShare() {
    const link = '<%= referralLink %>';
    navigator.clipboard.writeText(link);
    showToast('success', 'Referral link copied to clipboard!');
  }

  // Toast notification
  function showToast(icon, message) {
    Swal.fire({
      icon: icon,
      text: message,
      toast: true,
      position: 'top-right',
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true
    });
  }

  // ✅ PAGINATION FUNCTIONALITY
let referralsCurrentPage = <%= referralsCurrentPage %>;
let earningsCurrentPage = <%= earningsCurrentPage %>;

// Load paginated referrals
async function loadReferrals(page) {
  try {
    showLoadingState('referralsContainer');
    
    const response = await fetch(`/referrals/api/referred-users?page=${page}`);
    const result = await response.json();
    
    if (result.success) {
      renderReferrals(result.data);
      updateReferralsPagination(result.data);
      referralsCurrentPage = result.data.currentPage;
    } else {
      throw new Error(result.message || 'Failed to load referrals');
    }
  } catch (error) {
    console.error('Error loading referrals:', error);
    showError('referralsContainer', 'Error loading referrals. Please try again.');
  }
}

// Load paginated earnings
async function loadEarnings(page) {
  try {
    showLoadingState('earningsContainer');
    
    const response = await fetch(`/referrals/api/earnings?page=${page}`);
    const result = await response.json();
    
    if (result.success) {
      renderEarnings(result.data);
      updateEarningsPagination(result.data);
      earningsCurrentPage = result.data.currentPage;
    } else {
      throw new Error(result.message || 'Failed to load earnings');
    }
  } catch (error) {
    console.error('Error loading earnings:', error);
    showError('earningsContainer', 'Error loading earnings. Please try again.');
  }
}

// Render referrals
function renderReferrals(data) {
  const container = document.getElementById('referralsContainer');
  
  if (!data.referredUsers || data.referredUsers.length === 0) {
    container.innerHTML = `
      <div class="empty-referrals text-center py-5">
        <div class="mb-4">
          <i class="bi bi-people display-1 text-muted"></i>
        </div>
        <h4 class="text-muted mb-3">No Referrals Yet</h4>
        <p class="text-muted mb-4">Start sharing your referral code to earn rewards!</p>
        <button class="btn btn-primary" onclick="showShareModal()">
          <i class="bi bi-share-fill me-2"></i>Share Your Code
        </button>
      </div>
    `;
    return;
  }
  
  let html = '<div class="referral-list">';
  data.referredUsers.forEach(user => {
    const date = new Date(user.createdAt).toLocaleDateString('en-IN', { 
      day: '2-digit', month: 'short', year: 'numeric' 
    });
    
    html += `
      <div class="referral-item">
        <div class="row align-items-center py-3 px-4">
          <div class="col-md-1">
            <div class="referral-icon">
              <i class="bi bi-person-check-fill"></i>
            </div>
          </div>
          <div class="col-md-6">
            <div class="referral-details">
              <div class="referral-name">${user.name}</div>
              <div class="referral-meta">
                <span class="referral-email">${user.email}</span>
              </div>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <div class="referral-date">${date}</div>
          </div>
          <div class="col-md-3 text-end">
            <div class="referral-reward">
              <span class="badge bg-success">+₹300</span>
            </div>
          </div>
        </div>
      </div>
    `;
  });
  html += '</div>';
  
  container.innerHTML = html;
}

// Render earnings
function renderEarnings(data) {
  const container = document.getElementById('earningsContainer');
  
  if (!data.referralTransactions || data.referralTransactions.length === 0) {
    container.innerHTML = `
      <div class="text-center py-5">
        <p class="text-muted">No earnings history available</p>
      </div>
    `;
    return;
  }
  
  let html = '<div class="earnings-list">';
  data.referralTransactions.forEach(transaction => {
    const date = new Date(transaction.date).toLocaleDateString('en-IN', { 
      day: '2-digit', month: 'short', year: 'numeric' 
    });
    const time = new Date(transaction.date).toLocaleTimeString('en-IN', {
      hour: '2-digit', minute: '2-digit'
    });
    
    html += `
      <div class="earnings-item">
        <div class="row align-items-center py-3 px-4">
          <div class="col-md-1">
            <div class="transaction-icon credit">
              <i class="bi bi-arrow-down-circle"></i>
            </div>
          </div>
          <div class="col-md-6">
            <div class="transaction-description">${transaction.description}</div>
            <div class="transaction-meta">
              <span class="transaction-id">ID: ${transaction.transactionId}</span>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <div class="transaction-date">
              ${date}
              <div class="transaction-time">${time}</div>
            </div>
          </div>
          <div class="col-md-3 text-end">
            <div class="transaction-amount credit">
              +₹${transaction.amount.toLocaleString('en-IN')}
            </div>
          </div>
        </div>
      </div>
    `;
  });
  html += '</div>';
  
  container.innerHTML = html;
}

// Update referrals pagination
function updateReferralsPagination(data) {
  const container = document.getElementById('referralsPaginationContainer');
  container.innerHTML = generatePaginationHTML(data, 'referrals-pagination-btn');
  
  // Attach event listeners
  container.querySelectorAll('.referrals-pagination-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const page = parseInt(btn.dataset.page);
      if (page > 0) {
        loadReferrals(page);
        scrollToElement('referralsContainer');
      }
    });
  });
}

// Update earnings pagination
function updateEarningsPagination(data) {
  const container = document.getElementById('earningsPaginationContainer');
  container.innerHTML = generatePaginationHTML(data, 'earnings-pagination-btn');
  
  // Attach event listeners
  container.querySelectorAll('.earnings-pagination-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const page = parseInt(btn.dataset.page);
      if (page > 0) {
        loadEarnings(page);
        scrollToElement('earningsContainer');
      }
    });
  });
}

// Generate pagination HTML
function generatePaginationHTML(data, btnClass) {
  let html = '<div class="pagination-wrapper"><div class="pagination">';
  
  // Previous button
  html += data.hasPrevPage ? 
    `<button class="page-btn ${btnClass}" data-page="${data.prevPage}"><i class="bi bi-chevron-left"></i></button>` :
    `<button class="page-btn" disabled><i class="bi bi-chevron-left"></i></button>`;
  
  // Page numbers
  data.pageNumbers.forEach(pageNum => {
    if (pageNum === data.currentPage) {
      html += `<button class="page-btn active">${pageNum}</button>`;
    } else {
      html += `<button class="page-btn ${btnClass}" data-page="${pageNum}">${pageNum}</button>`;
    }
  });
  
  // Next button
  html += data.hasNextPage ?
    `<button class="page-btn ${btnClass}" data-page="${data.nextPage}"><i class="bi bi-chevron-right"></i></button>` :
    `<button class="page-btn" disabled><i class="bi bi-chevron-right"></i></button>`;
  
  html += '</div></div>';
  return html;
}

