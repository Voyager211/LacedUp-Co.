<div class="container py-4">
  <!-- Breadcrumbs -->
  <%- include('partials/breadcrumb', {
    breadcrumbs: [
      { label: 'Home', href: '/' },
      { label: 'My Profile', href: '/profile' },
      { label: 'My Orders' }
    ]
  }) %>

  <!-- Main Layout: Sidebar + Content -->
  <div class="row g-4">
    <!-- Left Sidebar Navigation -->
    <div class="col-lg-3 col-md-4">
      <%- include('partials/profile-sidebar.ejs', { user: user, active: 'orders' }) %>
    </div>

    <!-- Main Content Area -->
    <div class="col-lg-9 col-md-8">
      <div class="profile-content">
        <div class="content-card">
          <!-- top bar -->
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4 pb-3 border-bottom">
            <h2 class="content-title mb-0">My Orders</h2>
            <div class="d-flex align-items-center gap-2 flex-grow-1 justify-content-end">
              <%- include('partials/order-search') %>
              <select class="form-select" id="orderStatusFilter" style="width: auto; min-width: 140px;">
                <option value="">All Orders</option>
                <option value="Pending">Pending</option>
                <option value="Processing">Processing</option>
                <option value="Shipped">Shipped</option>
                <option value="Delivered">Delivered</option>
                <option value="Cancelled">Cancelled</option>
                <option value="Returned">Returned</option>
              </select>
            </div>
          </div>


          <!-- Orders Container -->
          <div id="ordersContainer">
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(order => { %>
                <div class="order-card mb-3" data-status="<%= order.status %>">
                  <div class="card shadow-sm">
                    <div class="card-body p-4">
                      <!-- Order Header -->
                      <div class="row mb-3 pb-3 border-bottom">
                        <div class="col-lg-6 col-md-6 mb-2 mb-lg-0">
                          <h6 class="mb-1 fw-bold text-dark">Order #<%= order.orderId %></h6>
                          <small class="text-muted">
                            <i class="bi bi-calendar3 me-1"></i>
                            <%= new Date(order.createdAt).toLocaleDateString('en-IN') %>
                          </small>
                        </div>
                        <div class="col-lg-3 col-md-3 mb-2 mb-lg-0 text-center">
                          <% 
                            let statusClass = 'secondary';
                            if (order.status === 'Pending') statusClass = 'warning';
                            else if (order.status === 'Processing') statusClass = 'primary';
                            else if (order.status === 'Shipped') statusClass = 'info';
                            else if (order.status === 'Delivered') statusClass = 'success';
                            else if (order.status === 'Cancelled') statusClass = 'danger';
                            else if (order.status === 'Returned') statusClass = 'warning';
                            else if (order.status === 'Partially Returned') statusClass = 'warning';
                            else if (order.status === 'Partially Delivered') statusClass = 'info';
                            else if (order.status === 'Processing Return') statusClass = 'warning';
                          %>
                          <span class="badge bg-<%= statusClass %> fs-6 px-3 py-2">
                            <%= order.status %>
                          </span>
                        </div>
                        <div class="col-lg-3 col-md-3 text-end">
                          <div class="fw-bold text-dark fs-5">₹<%= (order.totalAmount - (order.couponDiscount || 0)).toLocaleString('en-IN') %></div>
                          <small class="text-muted text-uppercase">
                            <%= order.paymentMethod === 'cod' ? 'Cash on Delivery' : order.paymentMethod %>
                          </small>
                        </div>
                      </div>

                      <!-- Items Display (Show max 4 items) -->
                      <div class="items-container">
                        <% 
                          const displayItems = order.items.slice(0, 4);
                          const remainingCount = order.items.length - 4;
                        %>
                        
                        <% displayItems.forEach((item, index) => { %>
                          <div class="item-row d-flex align-items-center py-2 <%= index < displayItems.length - 1 ? 'border-bottom' : '' %>">
                            <!-- Product Image -->
                            <div class="item-image me-3">
                              <% if (item.productId && item.productId.mainImage) { %>
                                <img src="<%= item.productId.mainImage %>" 
                                    alt="<%= item.productId.productName %>" 
                                    class="product-thumb">
                              <% } else { %>
                                <div class="product-thumb-placeholder">
                                  <i class="bi bi-image"></i>
                                </div>
                              <% } %>
                            </div>
                            
                            <!-- Product Info -->
                            <div class="item-info flex-grow-1">
                              <div class="fw-semibold text-dark">
                                <%= item.productId ? item.productId.productName : 'Product' %>
                              </div>
                              <small class="text-muted">
                                Size: <%= item.size %> | Qty: <%= item.quantity %>
                              </small>
                            </div>
                            
                            <!-- Item Price -->
                            <div class="item-price text-end">
                              <div class="fw-semibold">₹<%= item.totalPrice.toLocaleString('en-IN') %></div>
                              <% if (item.status && item.status !== order.status) { %>
                                <small class="badge bg-secondary"><%= item.status %></small>
                              <% } %>
                            </div>
                          </div>
                        <% }) %>
                        
                        <!-- Show remaining items count -->
                        <% if (remainingCount > 0) { %>
                          <div class="text-center py-2">
                            <button class="btn btn-link text-decoration-none p-0" 
                                    onclick="viewOrderDetails('<%= order.orderId %>')">
                              <i class="bi bi-plus-circle me-1"></i>
                              + <%= remainingCount %> more item<%= remainingCount > 1 ? 's' : '' %>
                            </button>
                          </div>
                        <% } %>
                      </div>

                      <!-- Order Actions -->
                      <div class="row mt-3 pt-3 border-top">
                        <div class="col-12">
                          <div class="order-actions d-flex flex-wrap gap-2 justify-content-end">
                            <!-- View Details Button -->
                            <button class="btn btn-primary btn-sm" 
                                    onclick="viewOrderDetails('<%= order.orderId %>')">
                              <i class="bi bi-eye me-1"></i>View Details
                            </button>
                          </div>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <!-- Empty State -->
              <div class="text-center py-5" id="emptyState">
                <div class="mb-4">
                  <i class="bi bi-bag-x display-1 text-muted"></i>
                </div>
                <h4 class="text-muted mb-3">No Orders Found</h4>
                <p class="text-muted mb-4">You haven't placed any orders yet. Start shopping to see your orders here!</p>
                <a href="/shop" class="btn btn-primary">
                  <i class="bi bi-shop me-2"></i>Start Shopping
                </a>
              </div>
            <% } %>
          </div>




          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <div class="row mt-4">
              <div class="col-12">
                <%- include('partials/pagination', {
                  currentPage: currentPage,
                  totalPages: totalPages
                }) %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Order Actions Modal -->
<div class="modal fade" id="orderActionModal" tabindex="-1" aria-labelledby="orderActionModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="orderActionModalLabel">Order Action</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="orderActionModalBody">
        <!-- Dynamic content will be loaded here -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="confirmOrderAction">Confirm</button>
      </div>
    </div>
  </div>
</div>

