<script>
// ==================== ORDER LISTING PAGE SCRIPT ====================

// ==================== GLOBAL VARIABLES ====================
let currentPage = <%= currentPage %>;
let currentSearchQuery = ''; // Track search query
let currentStatusFilter = ''; // Track status filter
let currentOrdersCount = <%= totalOrders || 0 %>;
let isLoading = false;

// Cancellation and return reasons
const cancellationReasons = <%- JSON.stringify(cancellationReasons) %>;
const returnReasons = <%- JSON.stringify(returnReasons) %>;

// ==================== INITIALIZATION ====================
document.addEventListener('DOMContentLoaded', function() {
  initializeOrderPage();
});

function initializeOrderPage() {
  // Setup status filter
  const statusFilter = document.getElementById('orderStatusFilter');
  if (statusFilter) {
    statusFilter.addEventListener('change', function() {
      currentStatusFilter = this.value;
      loadOrders(1, currentStatusFilter, currentSearchQuery);
      updateResetButtonVisibility(); // ✅ Add this line
    });
  }

  // Setup search functionality
  setupSearchHandlers();

  // Setup pagination click handlers
  setupPaginationHandlers();
}



// ==================== SEARCH HANDLERS ====================
function setupSearchHandlers() {
  const searchInput = document.getElementById('orderSearchInput');
  const clearSearchBtn = document.getElementById('clearOrderSearch');

  if (!searchInput) {
    console.error('❌ Search input not found!');
    return;
  }

  // Real-time search on input
  let searchTimeout;
  searchInput.addEventListener('input', function() {
    const query = this.value.trim();
    
    // Show/hide clear button
    if (clearSearchBtn) {
      clearSearchBtn.style.display = query ? 'flex' : 'none';
    }

    // Show/hide reset button
    updateResetButtonVisibility();

    // Clear previous timeout
    clearTimeout(searchTimeout);

    // Debounce search
    searchTimeout = setTimeout(() => {
      currentSearchQuery = query;
      loadOrders(1, currentStatusFilter, currentSearchQuery);
    }, 500);
  });

  // Clear search button
  if (clearSearchBtn) {
    clearSearchBtn.addEventListener('click', function() {
      searchInput.value = '';
      this.style.display = 'none';
      currentSearchQuery = '';
      loadOrders(1, currentStatusFilter, '');
      updateResetButtonVisibility();
    });
  }

  // Enter key support
  searchInput.addEventListener('keydown', function(e) {
    if (e.key === 'Enter') {
      e.preventDefault();
      clearTimeout(searchTimeout);
      const query = this.value.trim();
      currentSearchQuery = query;
      loadOrders(1, currentStatusFilter, currentSearchQuery);
    }
  });
}

// ==================== SHOW/HIDE RESET BUTTON ====================
function updateResetButtonVisibility() {
  const resetBtn = document.getElementById('resetAllFiltersBtn');
  if (resetBtn) {
    // Show button if search OR filter is active
    const hasActiveFilters = currentSearchQuery || currentStatusFilter;
    resetBtn.style.display = hasActiveFilters ? 'inline-block' : 'none';
  }
}



// ==================== PAGINATION HANDLERS ====================
function setupPaginationHandlers() {
  document.addEventListener('click', function(e) {
    if (e.target.closest('.pagination-btn')) {
      e.preventDefault();
      
      const btn = e.target.closest('.pagination-btn');
      const page = parseInt(btn.dataset.page);

      if (page && page > 0) {
        
        loadOrders(page, currentStatusFilter, currentSearchQuery);
      }
    }
  });
}

// ==================== LOAD ORDERS (AJAX) - UNIFIED ====================
async function loadOrders(page = 1, status = '', search = '') {
  if (isLoading) {
   
    return;
  }

  isLoading = true;

  // Update global state
  currentPage = page;
  currentStatusFilter = status;
  currentSearchQuery = search;

 

  showLoadingState();

  try {
    // Build API URL
    const params = new URLSearchParams();
    params.append('page', page);
    if (status) params.append('status', status);
    if (search) params.append('search', search);

    const url = `/orders/api/filtered?${params.toString()}`;
    

    const response = await fetch(url);
    const result = await response.json();

    

    if (result.success) {
      // Update global state
      currentPage = result.data.currentPage;
      currentOrdersCount = result.data.totalOrders;

     

      // Update UI - ALL THREE FUNCTIONS
      updateOrdersContainer(result.data.orders);
      updatePagination(result.data);
      updateOrdersCount(result.data.totalOrders); // ✅ UPDATE COUNT!

      // Update UI indicators
      updateSearchIndicator(search);
      updateFilterIndicator(status);
    } else {
      throw new Error(result.message || 'Failed to load orders');
    }
  } catch (error) {
    console.error('❌ Error loading orders:', error);
    showError('Error loading orders. Please try again.');
  } finally {
    isLoading = false;
    hideLoadingState();
  }
}

// ==================== UPDATE ORDERS COUNT ====================
function updateOrdersCount(count) {
  const ordersCountElement = document.getElementById('ordersCount');
  if (ordersCountElement) {
    ordersCountElement.textContent = `(${count || 0})`;
  
  }
}

// ==================== UI STATE INDICATORS ====================
function updateSearchIndicator(query) {
  const searchInput = document.getElementById('orderSearchInput');
  const clearBtn = document.getElementById('clearOrderSearch');
  
  if (searchInput) searchInput.value = query;
  if (clearBtn) clearBtn.style.display = query ? 'flex' : 'none';
}

function updateFilterIndicator(status) {
  const statusFilter = document.getElementById('orderStatusFilter');
  if (statusFilter) statusFilter.value = status;
}

// ==================== UPDATE ORDERS CONTAINER ====================
function updateOrdersContainer(orders) {
  const container = document.getElementById('ordersContainer');

  if (!orders || orders.length === 0) {
    const emptyMessage = currentSearchQuery 
      ? `No orders found matching "${currentSearchQuery}"${currentStatusFilter ? ` with status "${currentStatusFilter}"` : ''}`
      : currentStatusFilter 
        ? `No orders match the selected filter criteria.`
        : `You haven't placed any orders yet.`;

    const emptyIcon = currentSearchQuery || currentStatusFilter ? 'search' : 'bag-x';

    container.innerHTML = `
      <div class="text-center py-5" id="emptyState">
        <div class="mb-4">
          <i class="bi bi-${emptyIcon} display-1 text-muted"></i>
        </div>
        <h4 class="text-muted mb-3">No Orders Found</h4>
        <p class="text-muted mb-4">${emptyMessage}</p>
        ${currentSearchQuery || currentStatusFilter ? `
          <button class="btn btn-outline-primary" onclick="clearAllFilters()">
            <i class="bi bi-arrow-clockwise me-2"></i>Clear All Filters
          </button>
        ` : `
          <a href="/shop" class="btn btn-primary">
            <i class="bi bi-shop me-2"></i>Start Shopping
          </a>
        `}
      </div>
    `;
    return;
  }

  let cardsHTML = '';
  orders.forEach(order => {
    cardsHTML += generateOrderCardHTML(order);
  });

  container.innerHTML = cardsHTML;
}

// ==================== GENERATE ORDER CARD ====================
function generateOrderCardHTML(order) {
  const orderDate = new Date(order.createdAt);
  const formattedDate = orderDate.toLocaleDateString('en-IN', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });

  // Status badge class
  let statusClass = 'secondary';
  if (order.status === 'Pending') statusClass = 'warning';
  else if (order.status === 'Processing') statusClass = 'primary';
  else if (order.status === 'Shipped') statusClass = 'info';
  else if (order.status === 'Delivered') statusClass = 'success';
  else if (order.status === 'Cancelled') statusClass = 'danger';
  else if (order.status === 'Returned') statusClass = 'warning';
  else if (order.status === 'Partially Returned') statusClass = 'warning';
  else if (order.status === 'Partially Delivered') statusClass = 'info';
  else if (order.status === 'Processing Return') statusClass = 'warning';

  // Items display (max 4)
  const displayItems = order.items.slice(0, 4);
  const remainingCount = order.items.length - 4;

  let itemsHTML = '';
  displayItems.forEach((item, index) => {
    // Product image with link
    const productImageHTML = item.productId && item.productId.mainImage && item.productId.slug
      ? `<a href="/product/${item.productId.slug}" class="product-thumb-link">
          <img src="${item.productId.mainImage}" alt="${item.productId.productName}" class="product-thumb">
        </a>`
      : item.productId && item.productId.mainImage
      ? `<img src="${item.productId.mainImage}" alt="${item.productId.productName}" class="product-thumb">`
      : `<div class="product-thumb-placeholder"><i class="bi bi-image"></i></div>`;

    // Product name with link
    const productName = item.productId ? item.productId.productName : 'Product';
    const productNameHTML = item.productId && item.productId.slug
      ? `<a href="/product/${item.productId.slug}" class="text-decoration-none">
          <div class="fw-semibold text-dark product-name-link">${productName}</div>
        </a>`
      : `<div class="fw-semibold text-dark">${productName}</div>`;

    const borderClass = index < displayItems.length - 1 ? 'border-bottom' : '';

    itemsHTML += `
      <div class="item-row d-flex align-items-center py-2 ${borderClass}">
        <div class="item-image me-3">${productImageHTML}</div>
        <div class="item-info flex-grow-1">
          ${productNameHTML}
          <small class="text-muted">Size: ${item.size} • Qty: ${item.quantity}</small>
        </div>
        <div class="item-price text-end">
          <div class="fw-semibold">₹${item.totalPrice.toLocaleString('en-IN')}</div>
          ${item.status && item.status !== order.status ? `<small class="badge bg-secondary">${item.status}</small>` : ''}
        </div>
      </div>
    `;
  });


  if (remainingCount > 0) {
    itemsHTML += `
      <div class="text-center py-2">
        <button class="btn btn-link text-decoration-none p-0 fw-semibold" onclick="viewOrderDetails('${order.orderId}')">
          <i class="bi bi-plus-circle me-1"></i>${remainingCount} more item${remainingCount > 1 ? 's' : ''}
        </button>
      </div>
    `;
  }

  return `
    <div class="order-card mb-3" data-status="${order.status}">
      <div class="card">
        <div class="card-body p-4">
          <div class="row mb-3 pb-3 border-bottom">
            <div class="col-lg-6 col-md-6 mb-2 mb-lg-0">
              <h6 class="mb-1 fw-bold text-dark">Order #${order.orderId}</h6>
              <small class="text-muted"><i class="bi bi-calendar3 me-1"></i>${formattedDate}</small>
            </div>
            <div class="col-lg-3 col-md-3 mb-2 mb-lg-0 text-center">
              <span class="badge bg-${statusClass} fs-6 px-3 py-2">${order.status}</span>
            </div>
            <div class="col-lg-3 col-md-3 text-end">
              <div class="fw-bold text-dark fs-5">₹${(order.totalAmount - (order.couponDiscount || 0)).toLocaleString('en-IN')}</div>
              <small class="text-muted text-uppercase">${order.paymentMethod === 'cod' ? 'Cash on Delivery' : order.paymentMethod}</small>
            </div>
          </div>
          
          <div class="items-container">${itemsHTML}</div>
          
          <div class="row mt-3 pt-3 border-top">
            <div class="col-12">
              <div class="order-actions d-flex flex-wrap gap-2 justify-content-end">
                <button class="btn btn-primary btn-sm" onclick="viewOrderDetails('${order.orderId}')">
                  <i class="bi bi-eye me-1"></i>View Details
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  `;
}

// ==================== UPDATE PAGINATION ====================
function updatePagination(data) {
  const paginationWrapper = document.querySelector('.pagination-wrapper');
  if (!paginationWrapper) return;

  const { currentPage, totalPages, hasPrevPage, hasNextPage } = data;

  // Hide pagination if no pages or only one page
  if (!totalPages || totalPages <= 1) {
    paginationWrapper.innerHTML = '';
    paginationWrapper.style.display = 'none';
    return;
  }

  // Show pagination wrapper
  paginationWrapper.style.display = 'flex';

  // Generate page numbers (show up to 5 pages around current page)
  const pageNumbers = [];
  const maxPagesToShow = 5;
  let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
  let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);

  if (endPage - startPage + 1 < maxPagesToShow) {
    startPage = Math.max(1, endPage - maxPagesToShow + 1);
  }

  for (let i = startPage; i <= endPage; i++) {
    pageNumbers.push(i);
  }

  // Build pagination HTML
  let paginationHTML = '<div class="pagination">';

  // Previous button
  if (hasPrevPage) {
    paginationHTML += `<button class="page-btn pagination-btn" data-page="${currentPage - 1}"><i class="bi bi-chevron-left"></i></button>`;
  } else {
    paginationHTML += `<button class="page-btn disabled"><i class="bi bi-chevron-left"></i></button>`;
  }

  // Page numbers
  pageNumbers.forEach(pageNum => {
    if (pageNum === currentPage) {
      paginationHTML += `<button class="page-btn active">${pageNum}</button>`;
    } else {
      paginationHTML += `<button class="page-btn pagination-btn" data-page="${pageNum}">${pageNum}</button>`;
    }
  });

  // Next button
  if (hasNextPage) {
    paginationHTML += `<button class="page-btn pagination-btn" data-page="${currentPage + 1}"><i class="bi bi-chevron-right"></i></button>`;
  } else {
    paginationHTML += `<button class="page-btn disabled"><i class="bi bi-chevron-right"></i></button>`;
  }

  paginationHTML += '</div>';

  // Replace pagination content
  paginationWrapper.innerHTML = paginationHTML;

}

// ==================== LOADING STATES ====================
function showLoadingState() {
  const container = document.getElementById('ordersContainer');
  container.innerHTML = `
    <div class="text-center py-5">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <p class="mt-3 text-muted">Loading your orders...</p>
    </div>
  `;
}

function hideLoadingState() {
  // Loading state is replaced by updateOrdersContainer
}

function showError(message) {
  if (typeof Swal !== 'undefined') {
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: message,
      confirmButtonColor: '#dc3545'
    });
  } else {
    alert(message);
  }
}

// ==================== UTILITY FUNCTIONS ====================
function clearFilter() {
  currentStatusFilter = '';
  document.getElementById('orderStatusFilter').value = '';
  loadOrders(1, '', currentSearchQuery); // Keep search query
}

function clearAllFilters() {
  currentStatusFilter = '';
  currentSearchQuery = '';
  
  const statusFilter = document.getElementById('orderStatusFilter');
  const searchInput = document.getElementById('orderSearchInput');
  const clearBtn = document.getElementById('clearOrderSearch');
  const resetBtn = document.getElementById('resetAllFiltersBtn');
  
  if (statusFilter) statusFilter.value = '';
  if (searchInput) searchInput.value = '';
  if (clearBtn) clearBtn.style.display = 'none';
  if (resetBtn) resetBtn.style.display = 'none';
  
  loadOrders(1, '', '');
}

function viewOrderDetails(orderId) {
  window.location.href = `/orders/${orderId}`;
}

function downloadInvoice(orderId) {
  window.open(`/orders/${orderId}/invoice`, '_blank');
}
</script>


