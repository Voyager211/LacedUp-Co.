<script>
// ==================== ORDER LISTING PAGE SCRIPT ====================
// Global variables
let currentPage = <%= currentPage %>;
let isLoading = false;

// Cancellation and return reasons
const cancellationReasons = <%- JSON.stringify(cancellationReasons) %>;
const returnReasons = <%- JSON.stringify(returnReasons) %>;

// ==================== INITIALIZATION ====================
document.addEventListener('DOMContentLoaded', function() {
  initializeOrderPage();
});

function initializeOrderPage() {
  // Setup status filter
  const statusFilter = document.getElementById('orderStatusFilter');
  if (statusFilter) {
    statusFilter.addEventListener('change', function() {
      loadOrders(1, this.value);
    });
  }
  
  // Setup pagination click handlers
  setupPaginationHandlers();
}

// ==================== PAGINATION HANDLERS ====================
function setupPaginationHandlers() {
  document.addEventListener('click', function(e) {
    const paginationBtn = e.target.closest('.pagination-btn');
    if (!paginationBtn) return;
    
    // Ignore if disabled
    if (paginationBtn.classList.contains('disabled-btn') || 
        paginationBtn.closest('.page-item')?.classList.contains('disabled')) {
      return;
    }
    
    e.preventDefault();
    
    const page = parseInt(paginationBtn.dataset.page);
    if (!isNaN(page) && page > 0) {
      const statusFilter = document.getElementById('orderStatusFilter');
      loadOrders(page, statusFilter?.value || '');
    }
  });
}

// ==================== LOAD ORDERS (AJAX) ====================
async function loadOrders(page = 1, status = '') {
  if (isLoading) return;
  
  isLoading = true;
  showLoadingState();
  
  try {
    const params = new URLSearchParams();
    params.append('page', page);
    if (status) params.append('status', status);
    
    const response = await fetch(`/orders/api/filtered?${params.toString()}`);
    const result = await response.json();
    
    if (result.success) {
      currentPage = result.data.currentPage;
      updateOrdersContainer(result.data.orders);
      updatePagination(result.data.currentPage, result.data.totalPages);
    } else {
      throw new Error(result.message || 'Failed to load orders');
    }
  } catch (error) {
    console.error('Error loading orders:', error);
    showError('Error loading orders. Please try again.');
  } finally {
    isLoading = false;
    hideLoadingState();
  }
}

// ==================== UPDATE ORDERS CONTAINER ====================
function updateOrdersContainer(orders) {
  const container = document.getElementById('ordersContainer');
  
  if (!orders || orders.length === 0) {
    container.innerHTML = `
      <div class="text-center py-5" id="emptyState">
        <div class="mb-4">
          <i class="bi bi-funnel display-1 text-muted"></i>
        </div>
        <h4 class="text-muted mb-3">No Orders Found</h4>
        <p class="text-muted mb-4">No orders match the selected filter criteria.</p>
        <button class="btn btn-outline-primary" onclick="clearFilter()">
          <i class="bi bi-arrow-clockwise me-2"></i>Clear Filter
        </button>
      </div>
    `;
    return;
  }
  
  let cardsHTML = '';
  orders.forEach(order => {
    cardsHTML += generateOrderCardHTML(order);
  });
  
  container.innerHTML = cardsHTML;
}

// ==================== GENERATE ORDER CARD ====================
function generateOrderCardHTML(order) {
  const orderDate = new Date(order.createdAt);
  const formattedDate = orderDate.toLocaleDateString('en-IN', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  });
  
  // Status badge class
  let statusClass = 'secondary';
  if (order.status === 'Pending') statusClass = 'warning';
  else if (order.status === 'Processing') statusClass = 'primary';
  else if (order.status === 'Shipped') statusClass = 'info';
  else if (order.status === 'Delivered') statusClass = 'success';
  else if (order.status === 'Cancelled') statusClass = 'danger';
  else if (order.status === 'Returned') statusClass = 'warning';
  else if (order.status === 'Partially Returned') statusClass = 'warning';
  else if (order.status === 'Partially Delivered') statusClass = 'info';
  else if (order.status === 'Processing Return') statusClass = 'warning';
  
  // Items display (max 4)
  const displayItems = order.items.slice(0, 4);
  const remainingCount = order.items.length - 4;
  
  let itemsHTML = '';
  displayItems.forEach((item, index) => {
    const productImageHTML = (item.productId && item.productId.mainImage) 
      ? `<img src="${item.productId.mainImage}" alt="${item.productId.productName}" class="product-thumb">`
      : `<div class="product-thumb-placeholder"><i class="bi bi-image"></i></div>`;
    
    const productName = item.productId ? item.productId.productName : 'Product';
    const borderClass = index < displayItems.length - 1 ? 'border-bottom' : '';
    
    itemsHTML += `
      <div class="item-row d-flex align-items-center py-2 ${borderClass}">
        <div class="item-image me-3">${productImageHTML}</div>
        <div class="item-info flex-grow-1">
          <div class="fw-semibold text-dark">${productName}</div>
          <small class="text-muted">Size: ${item.size} | Qty: ${item.quantity}</small>
        </div>
        <div class="item-price text-end">
          <div class="fw-semibold">₹${item.totalPrice.toLocaleString('en-IN')}</div>
          ${item.status && item.status !== order.status ? 
            `<small class="badge bg-secondary">${item.status}</small>` : ''}
        </div>
      </div>
    `;
  });
  
  if (remainingCount > 0) {
    itemsHTML += `
      <div class="text-center py-2">
