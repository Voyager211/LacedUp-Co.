<% var pageTitle = typeof title !== 'undefined' ? title : '500 Server Error'; %>

<div class="container text-center my-5 py-5">
  <i class="bi bi-emoji-dizzy-fill text-danger" style="font-size: 4rem;"></i>
  <h1 class="display-4 fw-bold mt-3"><%= pageTitle %></h1>
  <p class="text-muted fs-5"><%= message || 'Something went wrong on our end. Please try again later.' %></p>
  <a href="/" class="btn btn-outline-secondary mt-3">
    <i class="bi bi-arrow-repeat"></i> Try Again
  </a>
</div>
