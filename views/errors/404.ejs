<% var pageTitle = typeof title !== 'undefined' ? title : '404 Not Found'; %>

<div class="container text-center my-5 py-5">
  <i class="bi bi-emoji-frown text-warning" style="font-size: 4rem;"></i>
  <h1 class="display-4 fw-bold mt-3"><%= pageTitle %></h1>
  <p class="text-muted fs-5"><%= message || 'The page you are looking for does not exist.' %></p>
  <a href="/" class="btn btn-outline-dark mt-3">
    <i class="bi bi-house-door"></i> Go to Homepage
  </a>
</div>
